<Window x:Class="DBCurse.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBCurse"
        mc:Ignorable="d"
        Title="Добавить отдел" Height="137.815" Width="338.656" Icon="Images/Department.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="comboBox_LeaderName" Height="24" IsEditable="True" Text="{Binding LeaderName}"  Margin="10,38,10,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="label_Copy2" Content="Начальник отдела" Margin="10,36,10,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="label" Content="Название отдела" Margin="10,7,10,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="textBox" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="button" Content="Ok" Grid.Column="1" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="button_Click"/>

    </Grid>
</Window>
